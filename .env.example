# BIRT AI報表產生器環境配置範例
# 請複製此檔案為 .env 並填入實際的配置值

# =============================================================================
# Google Gemini AI配置
# =============================================================================
# 請到 https://makersuite.google.com/app/apikey 申請API金鑰
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini模型設定（可選）
GEMINI_MODEL=gemini-2.5-pro

# =============================================================================
# Quicksilver資料庫連線配置
# =============================================================================
# JDBC驅動程式（通常不需要更改）
QS_DB_DRIVER=com.jeedsoft.jeedsql.jdbc.Driver

# 資料庫連線URL - 請替換 your-server 為實際的伺服器位址
QS_DB_URL=jdbc:jeedsql:jtds:sqlserver://your-server:1433;DatabaseName=QS;

# 資料庫使用者認證
QS_DB_USER=your_database_username
QS_DB_PASSWORD=your_database_password

# =============================================================================
# 資料庫進階設定（可選）
# =============================================================================
# 連線逾時設定（秒）
QS_CONNECTION_TIMEOUT=30
QS_QUERY_TIMEOUT=60

# 連線池設定
QS_MAX_POOL_SIZE=10
QS_MIN_POOL_SIZE=2

# 字元編碼設定
QS_CHARSET=UTF-8

# =============================================================================
# BIRT報表配置
# =============================================================================
# BIRT安裝路徑（如果有本地BIRT環境）
BIRT_PATH=D:/BIRT

# Quicksilver應用程式名稱
QS_APP_NAME=your_app_name

# 報表工作目錄
QS_EXTENSION_PATH=extension/your_app_name/report/birt/working

# =============================================================================
# 應用程式設定
# =============================================================================
# 伺服器設定（如果需要Web服務）
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# 日誌等級 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 輸出目錄
OUTPUT_DIR=output

# 批次處理大小
BATCH_SIZE=50

# =============================================================================
# 網路與安全設定（可選）
# =============================================================================
# HTTP代理設定（如果需要）
# HTTP_PROXY=http://your-proxy:8080
# HTTPS_PROXY=https://your-proxy:8080

# 請求逾時設定（秒）
REQUEST_TIMEOUT=300

# SSL憑證驗證（true/false）
SSL_VERIFY=true

# API請求重試次數
MAX_RETRIES=3

# =============================================================================
# 效能調校（可選）  
# =============================================================================
# 並行處理執行緒數
MAX_WORKERS=4

# 記憶體限制（MB）
MEMORY_LIMIT=1024

# Excel檔案大小限制（MB）
MAX_FILE_SIZE=100